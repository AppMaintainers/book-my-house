

<h1>Bookings for <%= @house.name %></h1>

<ul id="list">
<% @bookings_list.each do |booking| %>
  <li><%= booking.day %></li>
<% end %>
</ul>
<% if params[:order] == "asc" %>
  <%= link_to "Change order", house_path(@house, :order=>"desc")%>
<% else %>
  <%= link_to "Change order", house_path(@house, :order=>"asc")%>
<% end %>

